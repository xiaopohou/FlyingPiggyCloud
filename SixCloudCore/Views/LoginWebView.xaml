<fw:AcrylicWindow
    x:Class="SixCloudCore.Views.LoginWebView"
    xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:SixCloudCore.Views"
    xmlns:controls="clr-namespace:Microsoft.Toolkit.Wpf.UI.Controls;assembly=Microsoft.Toolkit.Wpf.UI.Controls.WebView"
    xmlns:userControl="clr-namespace:CustomControls.Controls;assembly=SixCloudCoreCustomControlLibrary"
    mc:Ignorable="d"
    Title="登陆" Height="650" Width="400" AcrylicWindowStyle="NoIcon" WindowStartupLocation="CenterScreen">
    <Grid>
        <userControl:LoadingControl HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <controls:WebView Source="{Binding LoginUrl,Mode=OneWay}" x:Name="mainContainer"/>
    </Grid>
</fw:AcrylicWindow>
