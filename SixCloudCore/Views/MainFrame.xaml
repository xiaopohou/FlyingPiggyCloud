<fw:AcrylicWindow x:Class="SixCloudCore.Views.MainFrame"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:local="clr-namespace:SixCloudCore.Views"
                  xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
                  xmlns:metro="clr-namespace:CustomControls.Controls;assembly=SixCloudCoreCustomControlLibrary"
                  xmlns:usercontrols="clr-namespace:SixCloudCore.Views.UserControls"
                  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                  xmlns:Converters="clr-namespace:MaterialDesignThemes.Wpf.Converters;assembly=MaterialDesignThemes.Wpf"
                  xmlns:vm="clr-namespace:SixCloudCore.ViewModels"
                  mc:Ignorable="d" MinHeight="720" MinWidth="1366" AcrylicWindowStyle="NoIcon" fw:PointerTracker.Enabled="True">
    <fw:AcrylicWindow.Resources>

        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonRevealStyle}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Foreground" Value="{DynamicResource MainForegroundBrush}"/>
        </Style>

        <!--TabControl分割线-->
        <Style TargetType="TabItem" x:Key="TabItemWithLeftSeparator">
            <Setter Property="IsEnabled" Value="False"/>
            <Setter Property="FontWeight" Value="UltraBlack"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="{DynamicResource MainForegroundBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <ContentPresenter x:Name="ContentSite" ContentSource="Header"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Converters:BrushRoundConverter x:Key="BrushRoundConverter" HighValue="White" LowValue="Black"/>

        <usercontrols:SizeCalculator x:Key="SizeCalculator"/>

        <vm:StatusToVisibility x:Key="StatusToVisibility"/>

        <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource MaterialDesignToolToggleListBoxItem}">
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        </Style>

        <Style x:Key="ProgressBarStyle" TargetType="{x:Type ProgressBar}" BasedOn="{StaticResource MaterialDesignLinearProgressBar}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="Value" Value="100">
                    <Setter Property="Visibility" Value="Hidden"/>
                </Trigger>
            </Style.Triggers>
        </Style>


    </fw:AcrylicWindow.Resources>

    <metro:FluentTabControl>

        <!--文件列表-->
        <TabItem IsEnabled="False" Style="{StaticResource TabItemWithLeftSeparator}">
            <TabItem.Header>
                <Border Margin="15,15" BorderBrush="{DynamicResource MainForegroundBrush}" BorderThickness="0">
                    <TextBlock Text="文件列表"/>
                </Border>
            </TabItem.Header>
        </TabItem>

        <metro:FluentTabItem  DataContext="{Binding FileVM}" Icon="&#xf07b;" IconMove="&#xf07b;" Header="所有文件">
            <Grid Margin="30,40,15,15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <usercontrols:FileListView x:Name="FileListContainer" ListView.SelectionChanged="FileListContainer_SelectionChanged"/>
                <usercontrols:FileListItemInformationView HorizontalAlignment="Stretch" Background="White" Grid.Row="1" x:Name="InfoView" DataContext="{Binding FileListItemInformation}"/>
            </Grid>
        </metro:FluentTabItem>

        <metro:FluentTabItem DataContext="{Binding RecVM}" Header="回收中心">
            <usercontrols:RecoveryBox Margin="30,40,15,15" x:Name="RecoveryBoxContainer"/>
        </metro:FluentTabItem>

        <TabItem IsEnabled="False" Style="{StaticResource TabItemWithLeftSeparator}">
            <TabItem.Header>
                <Border Margin="15,15" BorderBrush="{DynamicResource MainForegroundBrush}" BorderThickness="0">
                    <TextBlock Text="传输任务"/>
                </Border>
            </TabItem.Header>
        </TabItem>

        <!--离线下载列表-->
        <metro:FluentTabItem Foreground="#FF5A5A5A" Icon="&#xF381;" IconMove="&#xF381;" Header="离线任务">
            <Grid DataContext="{Binding OfflineTask}" Background="White" Margin="30,40,15,15">
                <StackPanel Height="42" VerticalAlignment="Top" Orientation="Horizontal">
                    <Button HorizontalAlignment="Left"
                            Style="{DynamicResource MaterialDesignFlatButton}"
                            VerticalAlignment="Center" Margin="5,0"
                            Command="{Binding NewTaskCommand}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <metro:FontIcon Icon="&#xF067;" Margin="5,0"/>
                            <TextBlock Text="新建任务" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button HorizontalAlignment="Left" 
                            Style="{DynamicResource MaterialDesignFlatButton}" 
                            VerticalAlignment="Center" Margin="5,0" 
                            Command="{Binding CancelTaskCommand}"
                            CommandParameter="{Binding SelectedItems, ElementName=OfflineList}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <metro:FontIcon Icon="&#xF068;" Margin="5,0"/>
                            <TextBlock Text="取消任务" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button HorizontalAlignment="Left" 
                            Style="{DynamicResource MaterialDesignFlatButton}" 
                            VerticalAlignment="Center" Margin="5,0" 
                            Command="{Binding RefreshListCommand}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <metro:FontIcon Icon="&#xF2F1;" Margin="5,0"/>
                            <TextBlock Text="刷新列表" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                <ListBox x:Name="OfflineList" ScrollViewer.ScrollChanged="OfflineList_ScrollChanged" ItemsSource="{Binding ObservableCollection}" Background="White" Margin="0,42,0,0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Height="48">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="48"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <ProgressBar Style="{StaticResource ProgressBarStyle}" Height="48" Value="{Binding Progress, Mode=OneWay}" Grid.ColumnSpan="5" Grid.RowSpan="2"/>
                                <StackPanel Grid.Column="3" Orientation="Horizontal">
                                    <TextBlock Text="任务进度："/>
                                    <TextBlock Text="{Binding Progress, Mode=OneWay}"/>
                                    <TextBlock Text="%"/>
                                </StackPanel>
                                <metro:FontIcon Icon="&#xF4DE;" Grid.RowSpan="2"/>
                                <TextBlock Grid.ColumnSpan="2" Grid.Column="1" Text="{Binding Name, Mode=OneWay}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding DownloadSize, Converter={StaticResource SizeCalculator}, Mode=OneWay}"/>
                                    <TextBlock Text="/"/>
                                    <TextBlock Text="{Binding Size, Converter={StaticResource SizeCalculator}, Mode=OneWay}"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </metro:FluentTabItem>

        <!--下载列表-->
        <metro:FluentTabItem Foreground="#FF5A5A5A" Icon="&#xF103;" IconMove="&#xF103;" Header="正在下载">
            <Grid Background="White" Margin="30,40,15,15">
                <StackPanel Height="42" VerticalAlignment="Top" Orientation="Horizontal">
                    <Button HorizontalAlignment="Left"
                            Style="{DynamicResource MaterialDesignFlatButton}"
                            VerticalAlignment="Center" Margin="5,0"
                            Command="MediaCommands.Play"
                            CommandParameter="{Binding SelectedItems, ElementName=DownloadingList}"
                            CommandTarget="{Binding ElementName=DownloadingList}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <metro:FontIcon Icon="&#xF574;" Margin="5,0"/>
                            <TextBlock Text="开始/暂停任务" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button HorizontalAlignment="Left" 
                            Style="{DynamicResource MaterialDesignFlatButton}" 
                            VerticalAlignment="Center" Margin="5,0" 
                            Command="MediaCommands.Stop"
                            CommandParameter="{Binding SelectedItems, ElementName=DownloadingList}"
                            CommandTarget="{Binding ElementName=DownloadingList}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <metro:FontIcon Icon="&#xF574;" Margin="5,0"/>
                            <TextBlock Text="取消任务" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                <ListBox SelectionMode="Multiple" x:Name="DownloadingList" DataContext="{Binding DownloadingList}" ItemsSource="{Binding ObservableCollection}" Background="White" Margin="0,42,0,0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Height="48">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="48"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <ProgressBar Style="{StaticResource ProgressBarStyle}" Height="48" Value="{Binding Progress, Mode=OneWay}" Grid.ColumnSpan="5" Grid.RowSpan="2"/>
                                <StackPanel Grid.Column="3" Orientation="Horizontal">
                                    <TextBlock Text="任务进度："/>
                                    <TextBlock Text="{Binding Progress, Mode=OneWay}"/>
                                    <TextBlock Text="%"/>
                                </StackPanel>
                                <metro:FontIcon Icon="{Binding Icon}" Grid.RowSpan="2"/>
                                <TextBlock Grid.ColumnSpan="2" Grid.Column="1" Text="{Binding Name, Mode=OneWay}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center">
                                    <TextBlock Text="暂停，等待中..." Margin="0,0,5,0" Visibility="{Binding Status, Converter={StaticResource StatusToVisibility}, Mode=OneWay}"/>
                                    <TextBlock Text="{Binding Completed, Mode=OneWay}"/>
                                    <TextBlock Text="/"/>
                                    <TextBlock Text="{Binding Total, Mode=OneWay}"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.CommandBindings>
                        <CommandBinding Command="MediaCommands.Play" Executed="DownloadingTaskPause"/>
                        <CommandBinding Command="MediaCommands.Stop" Executed="DownloadingTaskCancel"/>
                    </ListBox.CommandBindings>
                </ListBox>
            </Grid>
        </metro:FluentTabItem>

        <!--下载完成-->
        <metro:FluentTabItem Foreground="#FF5A5A5A" Icon="&#xF560;" IconMove="&#xF560;" Header="下载完成">
            <ListBox ContextMenuOpening="DownloadedList_ContextMenuOpening" x:Name="DownloadedList" DataContext="{Binding DownloadedList}" ItemsSource="{Binding ObservableCollection}" Background="White" Margin="30,40,15,15">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Height="48">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="48"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <!--<Image Source="{Binding Icon}" Grid.RowSpan="2"/>-->
                            <metro:FontIcon Icon="&#xF46C;" Grid.RowSpan="2"/>
                            <TextBlock Grid.ColumnSpan="4" Grid.Column="1" Text="{Binding Name, Mode=OneWay}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center">
                                <TextBlock Text="完成时间：" Margin="0,0,5,0" Visibility="{Binding Status, Converter={StaticResource StatusToVisibility}, Mode=OneWay}"/>
                                <TextBlock Text="{Binding CompletedTime, Mode=OneWay}"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="打开" Command="{Binding OpenCommand}"/>
                        <MenuItem Header="在文件夹中显示" Command="{Binding ShowCommand}"/>
                        <MenuItem Header="删除" Command="{Binding DeleteCommand}"/>
                    </ContextMenu>
                </ListBox.ContextMenu>
            </ListBox>

        </metro:FluentTabItem>

        <!--上传列表-->
        <metro:FluentTabItem Foreground="#FF5A5A5A" Icon="&#xF102;" IconMove="&#xF102;" Header="正在上传">
            <Grid Margin="30,40,15,15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal">
                    <Button Command="MediaCommands.Play"
                            CommandParameter="{Binding SelectedItems, ElementName=UploadingList}"
                            CommandTarget="{Binding ElementName=UploadingList}">
                        <StackPanel Margin="15" Orientation="Horizontal" HorizontalAlignment="Center">
                            <metro:FontIcon Icon="&#xF574;" Margin="5,0"/>
                            <TextBlock Text="开始/暂停任务" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Command="MediaCommands.Stop"
                            CommandParameter="{Binding SelectedItems, ElementName=UploadingList}"
                            CommandTarget="{Binding ElementName=UploadingList}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <metro:FontIcon Icon="&#xF574;" Margin="5,0"/>
                            <TextBlock Text="取消任务" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                <ListBox Grid.Row="1" x:Name="UploadingList" DataContext="{Binding UploadingList}" ItemsSource="{Binding ObservableCollection}" Background="White">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Height="48">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="48"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <ProgressBar Style="{StaticResource ProgressBarStyle}" Height="48" Value="{Binding Progress, Mode=OneWay}" Grid.ColumnSpan="5" Grid.RowSpan="2"/>
                                <StackPanel Grid.Column="3" Orientation="Horizontal">
                                    <TextBlock Text="任务进度："/>
                                    <TextBlock Text="{Binding Progress, Mode=OneWay}"/>
                                    <TextBlock Text="%"/>
                                </StackPanel>
                                <metro:FontIcon Icon="&#xF093;" Grid.RowSpan="2"/>
                                <TextBlock Grid.ColumnSpan="4" Grid.Column="1" Text="{Binding Name, Mode=OneWay}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Status}" Margin="0,0,5,0"/>
                                    <TextBlock Text="："/>
                                    <TextBlock Text="{Binding Uploaded, Mode=OneWay}"/>
                                    <TextBlock Text="/"/>
                                    <TextBlock Text="{Binding Total, Mode=OneWay}"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.CommandBindings>
                        <CommandBinding Command="MediaCommands.Play" Executed="UploadingTaskPause"/>
                        <CommandBinding Command="MediaCommands.Stop" Executed="UploadingTaskCancel"/>
                    </ListBox.CommandBindings>
                </ListBox>
            </Grid>
        </metro:FluentTabItem>

        <!--上传完成-->
        <metro:FluentTabItem Foreground="#FF5A5A5A" Icon="&#xF560;" IconMove="&#xF560;" Header="上传完成">
            <ListBox x:Name="UploadedList" DataContext="{Binding UploadedList}" ItemsSource="{Binding ObservableCollection}" Background="White" Margin="30,40,15,15">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Height="48">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="48"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <!--<Image Source="{Binding Icon}" Grid.RowSpan="2"/>-->
                            <metro:FontIcon Icon="&#xF46C;" Grid.RowSpan="2"/>
                            <TextBlock Grid.ColumnSpan="4" Grid.Column="1" Text="{Binding Name, Mode=OneWay}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center">
                                <TextBlock Text="完成时间：" Margin="0,0,5,0" Visibility="{Binding Status, Converter={StaticResource StatusToVisibility}, Mode=OneWay}"/>
                                <TextBlock Text="{Binding CompletedTime, Mode=OneWay}"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </metro:FluentTabItem>


        <!--分享功能（V1接口未实现）-->
        <!--<metro:FluentTabItem Icon="&#xf1e0;" Header="分享设置"/>-->
    </metro:FluentTabControl>
</fw:AcrylicWindow>
