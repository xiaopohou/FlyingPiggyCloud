<Window x:Class="SixCloud.Core.Views.Dialogs.DownloadTaskGroupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:m="clr-namespace:SixCloud.Core.Models"
        xmlns:local="clr-namespace:SixCloud.Core.Views.Dialogs"
        mc:Ignorable="d"
        Title="DownloadTaskGroupDialog" Height="450" Width="800">
    <Grid>
        <ListBox Grid.Row="1" SelectionMode="Extended" x:Name="DownloadingList" DataContext="{Binding DownloadingList}" ItemsSource="{Binding ObservableCollection}" ItemTemplate="{StaticResource TransferItemDataTemplate}"/>
    </Grid>
</Window>
