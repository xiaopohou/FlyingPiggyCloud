<Page x:Class="FlyingPiggyCloud.Views.CompletedListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FlyingPiggyCloud.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CompletedListPage">

    <Grid>
        <StackPanel Orientation="Horizontal" Height="50" VerticalAlignment="Top">
            <Button Content="导航向前"/>
            <Button Content="导航向后"/>
            <Button Content="全部清除"/>
        </StackPanel>
        <ListView Margin="0,50,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn>
                        <GridViewColumn.Header>
                            <CheckBox/>
                        </GridViewColumn.Header>
                    </GridViewColumn>
                    <GridViewColumn Header="文件名"/>
                    <GridViewColumn Header="大小"/>
                    <GridViewColumn Header="状态"/>
                    <GridViewColumn Header="操作"/>
                </GridView>
            </ListView.View>
            <ListViewItem Content="test" Height="50"/>
        </ListView>
    </Grid>
</Page>
