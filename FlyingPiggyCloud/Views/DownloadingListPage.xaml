<Page x:Class="FlyingPiggyCloud.Views.DownloadingListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FlyingPiggyCloud.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DownloadingListPage">
    <Page.Resources>
        <DataTemplate x:Key="CheckBox">
            <CheckBox/>
        </DataTemplate>
        <DataTemplate x:Key="FileName">
            <TextBlock Text="{Binding FileName}"/>
        </DataTemplate>
        <DataTemplate x:Key="Size">
            <TextBlock Text="{Binding Size}"/>
        </DataTemplate>
        <DataTemplate x:Key="Status">
            <TextBlock Text="{Binding Status}"/>
        </DataTemplate>
        <DataTemplate x:Key="Operates">
            <StackPanel>
                <Button Style="{StaticResource SimpleButton}"/>
                <Button Style="{StaticResource SimpleButton}"/>
                <Button Style="{StaticResource SimpleButton}"/>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>
    <Grid>
        <StackPanel Orientation="Horizontal" Height="50" VerticalAlignment="Top">
            <Button Width="45" Height="45" Content="导航向前" Margin="5" Style="{StaticResource CircleButton}"/>
            <Button Width="45" Height="45" Content="导航向后" Margin="5" Style="{StaticResource CircleButton}"/>
            <Button Content="全部开始" Margin="5" Style="{DynamicResource ButtonBasicDesign}"/>
            <Button Content="全部暂停" Margin="5" Style="{DynamicResource ButtonBasicDesign}"/>
        </StackPanel>
        <ListView Name="DownloadList" Margin="0,50,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn CellTemplate="{StaticResource CheckBox}">
                        <GridViewColumn.Header>
                            <CheckBox/>
                        </GridViewColumn.Header>
                    </GridViewColumn>
                    <GridViewColumn CellTemplate="{StaticResource FileName}" Header="文件名"/>
                    <GridViewColumn CellTemplate="{StaticResource Size}" Header="大小"/>
                    <GridViewColumn CellTemplate="{StaticResource Status}" Header="状态"/>
                    <GridViewColumn CellTemplate="{StaticResource Operates}" Header="操作"/>
                </GridView>
            </ListView.View>
            <!--<ListViewItem Content="test" Height="50"/>-->
        </ListView>
    </Grid>
</Page>
