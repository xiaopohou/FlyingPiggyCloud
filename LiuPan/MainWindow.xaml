<ctl:MetroWindow x:Class="SixCloud.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SixCloud"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:ctl="clr-namespace:SixCloudCustomControlLibrary.Controls;assembly=SixCloudCustomControlLibrary"
        xmlns:usercontrols="clr-namespace:SixCloud.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MetroWindowLayout="WideAngle">
    <Grid>
        <Button Click="Button_Click"/>
        <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" Value="50" Width="100" Height="100" Background="Black"/>
    </Grid>
</ctl:MetroWindow>
