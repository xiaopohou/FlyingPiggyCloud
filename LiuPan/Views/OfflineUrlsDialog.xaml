    <controls:MetroWindow.Resources>
        <Style x:Key="StageButton" TargetType="{x:Type Button}" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Margin" Value="15"/>
        </Style>
    </controls:MetroWindow.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Margin="5,32,5,5" x:Name="MainContainer">
            <Grid x:Name="WhichTypeStageContainer" Opacity="0" RenderTransformOrigin="0.5,0.5">
                <!--#region  动画及触发器-->
                <RadioButton x:Name="IsWhichTypeStage" Visibility="Collapsed" GroupName="Stage"/>
                <Rectangle>
                    <Rectangle.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="Black" Offset="0"/>
                            <GradientStop Color="Red" Offset="1"/>
                            <GradientStop Color="#FF4E9755" Offset="0.327"/>
                            <GradientStop Color="#FFBAD0FF" Offset="0.84"/>
                        </RadialGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <Grid.RenderTransform>
                    <TransformGroup>
                        <TranslateTransform x:Name="WhichTypeStageTranslateTransform" X="{Binding ElementName=MainContainer,Path=ActualWidth}"/>
                        <ScaleTransform x:Name="WhichTypeStageScaleTransform" CenterX="0.5" CenterY="0.5"/>
                    </TransformGroup>
                </Grid.RenderTransform>
                <Grid.Triggers>
                    <EventTrigger RoutedEvent="RadioButton.Checked">
                        <EventTrigger.Actions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="WhichTypeStageScaleTransform"
                                                     Storyboard.TargetProperty="ScaleX"
                                                     From="0" To="1"
                                                     Duration="00:00:00.200"/>
                                    <DoubleAnimation Storyboard.TargetName="WhichTypeStageContainer"
                                                     Storyboard.TargetProperty="Opacity"
                                                     From="0" To="1"
                                                     Duration="00:00:00.200"/>
                                    <DoubleAnimation Storyboard.TargetName="WhichTypeStageScaleTransform"
                                                     Storyboard.TargetProperty="ScaleY"
                                                     From="0" To="1"
                                                     Duration="00:00:00.200"/>
                                    <DoubleAnimation Storyboard.TargetName="WhichTypeStageTranslateTransform"
                                                     Storyboard.TargetProperty="X"
                                                     To="0"
                                                     Duration="00:00:00"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger.Actions>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="RadioButton.Unchecked">
                        <EventTrigger.Actions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="WhichTypeStageContainer"
                                                     Storyboard.TargetProperty="Opacity"
                                                     From="1" To="0"
                                                     Duration="00:00:00.200"/>
                                    <DoubleAnimation Storyboard.TargetName="WhichTypeStageTranslateTransform"
                                                     Storyboard.TargetProperty="X"
                                                     To="{Binding ElementName=MainContainer,Path=ActualWidth}"
                                                     Duration="00:00:00.200">
                                        <DoubleAnimation.EasingFunction>
                                            <PowerEase EasingMode="EaseIn"/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger.Actions>
                    </EventTrigger>
                </Grid.Triggers>
                <!--#endregion-->
            </Grid>
            <Grid x:Name="InputUrlsStageContainer" Opacity="0" RenderTransformOrigin="0.5,0.5">
                <!--#region  动画及触发器-->
                <RadioButton x:Name="IsInputUrlsStage" Visibility="Collapsed" GroupName="Stage"/>
                <Rectangle>
                    <Rectangle.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="Black" Offset="0"/>
                            <GradientStop Color="Red" Offset="1"/>
                            <GradientStop Color="#FF974E80" Offset="0.633"/>
                        </RadialGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <Grid.RenderTransform>
                    <TransformGroup>
                        <TranslateTransform x:Name="InputUrlsStageTranslateTransform" X="{Binding ElementName=MainContainer,Path=ActualWidth}"/>
                        <ScaleTransform x:Name="InputUrlsStageScaleTransform" CenterX="0.5" CenterY="0.5"/>
                    </TransformGroup>
                </Grid.RenderTransform>
                <Grid.Triggers>
                    <EventTrigger RoutedEvent="RadioButton.Checked">
                        <EventTrigger.Actions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="InputUrlsStageScaleTransform"
                                                     Storyboard.TargetProperty="ScaleX"
                                                     From="0" To="1"
                                                     Duration="00:00:00.200"/>
                                    <DoubleAnimation Storyboard.TargetName="InputUrlsStageContainer"
                                                     Storyboard.TargetProperty="Opacity"
                                                     From="0" To="1"
                                                     Duration="00:00:00.200"/>
                                    <DoubleAnimation Storyboard.TargetName="InputUrlsStageScaleTransform"
                                                     Storyboard.TargetProperty="ScaleY"
                                                     From="0" To="1"
                                                     Duration="00:00:00.200"/>
                                    <DoubleAnimation Storyboard.TargetName="InputUrlsStageTranslateTransform"
                                                     Storyboard.TargetProperty="X"
                                                     To="0"
                                                     Duration="00:00:00"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger.Actions>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="RadioButton.Unchecked">
                        <EventTrigger.Actions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="InputUrlsStageContainer"
                                                     Storyboard.TargetProperty="Opacity"
                                                     From="1" To="0"
                                                     Duration="00:00:00.200"/>
                                    <DoubleAnimation Storyboard.TargetName="InputUrlsStageTranslateTransform"
                                                     Storyboard.TargetProperty="X"
                                                     To="{Binding ElementName=MainContainer,Path=ActualWidth}"
                                                     Duration="00:00:00.200">
                                        <DoubleAnimation.EasingFunction>
                                            <PowerEase EasingMode="EaseIn"/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger.Actions>
                    </EventTrigger>
                </Grid.Triggers>
                <!--#endregion-->
            </Grid>
            <Grid x:Name="UploadTorrentStageContainer" Opacity="0" RenderTransformOrigin="0.5,0.5">
                <!--#region  动画及触发器-->
                <RadioButton x:Name="IsUploadTorrentStage" Visibility="Collapsed" GroupName="Stage"/>
                <Rectangle>
                    <Rectangle.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="White" Offset="0"/>
                            <GradientStop Color="#FF0097FF" Offset="1"/>
                            <GradientStop Color="#FF208170" Offset="0.633"/>
                        </RadialGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <Grid.RenderTransform>
                    <TransformGroup>
                        <TranslateTransform x:Name="UploadTorrentStageTranslateTransform" X="{Binding ElementName=MainContainer,Path=ActualWidth}"/>
                        <ScaleTransform x:Name="UploadTorrentStageScaleTransform" CenterX="0.5" CenterY="0.5"/>
                    </TransformGroup>
                </Grid.RenderTransform>
                <Grid.Triggers>
                    <EventTrigger RoutedEvent="RadioButton.Checked">
                        <EventTrigger.Actions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="UploadTorrentStageScaleTransform"
                                                     Storyboard.TargetProperty="ScaleX"
                                                     From="0" To="1"
                                                     Duration="00:00:00.200"/>
                                    <DoubleAnimation Storyboard.TargetName="UploadTorrentStageContainer"
                                                     Storyboard.TargetProperty="Opacity"
                                                     From="0" To="1"
                                                     Duration="00:00:00.200"/>
                                    <DoubleAnimation Storyboard.TargetName="UploadTorrentStageScaleTransform"
                                                     Storyboard.TargetProperty="ScaleY"
                                                     From="0" To="1"
                                                     Duration="00:00:00.200"/>
                                    <DoubleAnimation Storyboard.TargetName="UploadTorrentStageTranslateTransform"
                                                     Storyboard.TargetProperty="X"
                                                     To="0"
                                                     Duration="00:00:00"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger.Actions>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="RadioButton.Unchecked">
                        <EventTrigger.Actions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="UploadTorrentStageContainer"
                                                     Storyboard.TargetProperty="Opacity"
                                                     From="1" To="0"
                                                     Duration="00:00:00.200"/>
                                    <DoubleAnimation Storyboard.TargetName="UploadTorrentStageTranslateTransform"
                                                     Storyboard.TargetProperty="X"
                                                     To="{Binding ElementName=MainContainer,Path=ActualWidth}"
                                                     Duration="00:00:00.200">
                                        <DoubleAnimation.EasingFunction>
                                            <PowerEase EasingMode="EaseIn"/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger.Actions>
                    </EventTrigger>
                </Grid.Triggers>
                <!--#endregion-->
            </Grid>
            <Grid x:Name="CheckFilesStageContainer" Opacity="0" RenderTransformOrigin="0.5,0.5">
                <!--#region  动画及触发器-->
                <RadioButton x:Name="IsCheckFilesStage" Visibility="Collapsed" GroupName="Stage"/>
                <Rectangle>
                    <Rectangle.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="White" Offset="0"/>
                            <GradientStop Color="#FF0CFF00" Offset="1"/>
                            <GradientStop Color="#FF73974E" Offset="0.633"/>
                        </RadialGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <Grid.RenderTransform>
                    <TransformGroup>
                        <TranslateTransform x:Name="CheckFilesStageTranslateTransform" X="{Binding ElementName=MainContainer,Path=ActualWidth}"/>
                        <ScaleTransform x:Name="CheckFilesStageScaleTransform" CenterX="0.5" CenterY="0.5"/>
                    </TransformGroup>
                </Grid.RenderTransform>
                <Grid.Triggers>
                    <EventTrigger RoutedEvent="RadioButton.Checked">
                        <EventTrigger.Actions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="CheckFilesStageScaleTransform"
                                                     Storyboard.TargetProperty="ScaleX"
                                                     From="0" To="1"
                                                     Duration="00:00:00.200"/>
                                    <DoubleAnimation Storyboard.TargetName="CheckFilesStageContainer"
                                                     Storyboard.TargetProperty="Opacity"
                                                     From="0" To="1"
                                                     Duration="00:00:00.200"/>
                                    <DoubleAnimation Storyboard.TargetName="CheckFilesStageScaleTransform"
                                                     Storyboard.TargetProperty="ScaleY"
                                                     From="0" To="1"
                                                     Duration="00:00:00.200"/>
                                    <DoubleAnimation Storyboard.TargetName="CheckFilesStageTranslateTransform"
                                                     Storyboard.TargetProperty="X"
                                                     To="0"
                                                     Duration="00:00:00"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger.Actions>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="RadioButton.Unchecked">
                        <EventTrigger.Actions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="CheckFilesStageContainer"
                                                     Storyboard.TargetProperty="Opacity"
                                                     From="1" To="0"
                                                     Duration="00:00:00.200"/>
                                    <DoubleAnimation Storyboard.TargetName="CheckFilesStageTranslateTransform"
                                                     Storyboard.TargetProperty="X"
                                                     To="{Binding ElementName=MainContainer,Path=ActualWidth}"
                                                     Duration="00:00:00.200">
                                        <DoubleAnimation.EasingFunction>
                                            <PowerEase EasingMode="EaseIn"/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger.Actions>
                    </EventTrigger>
                </Grid.Triggers>
                <!--#endregion-->
            </Grid>
            <Button Click="Button_Click"/>

        </Grid>

        <Grid Grid.Row="1">
            <Button Style="{DynamicResource StageButton}" Content="下一步" Command="{Binding PrevStageCommand}" HorizontalAlignment="Right"/>
            <Button Style="{DynamicResource StageButton}" Content="上一步" Command="{Binding NextStageCommand}" HorizontalAlignment="Left"/>
        </Grid>
    </Grid>
</controls:MetroWindow>
